<% @posts.each do |post| %>
<p>
    제목 : <%= post.title%>
</p>
<p>
    내용 : <%= post.description%>
</p>
<a href="/update/<%=post.id%>">수정하기</a>
<a href="/delete/<%=post.id%>">삭제하기</a>
<% end %>

<form action="/create" method="post">
    <p>제목</p>
    <input type="text" name="title">
    <br />
    <p>내용</p>
    <input type="text" name="description">
    <button type="submit">제출</button>
</form>